<!DOCTYPE html>
<html lang="en">
<%- include("../partials/head.ejs") %>
<body>
    <%- include("../partials/header.ejs") %>

    <div class="flex column space-around center-items padding-2-5 whitesmoke">
        <form class="flex column space-around center-items width-50 padding-1" action="/game" method="POST">
            <fieldset class="white flex column space-around center-items width-90">
                <legend>
                    New Game
                </legend>
                <div class="flex column space-around center-items margin-1">
                    <label for="date">Date</label><br>
                    <input type="date" name="date" id="date" required>
                </div>
                    <br>
                <div class="flex column space-around center-items margin-1">
                        <label for="course">Course</label><br>
                        <select name="course" id="course" required>
                            <option value="" disabled selected hidden>Choose a course</option>
                            <% for (course of courses){%>}
                            <option value="<%= course._id %>"><%= course.title %>: <%= course.holes %> Hole <%= course.type %> Course, <%= course.location %></option>
                            <% } %>
                        </select>
                </div>
                    
                <div class="flex column space-around center-items">
                    <input class="button-1" type="submit" value="Start Game">
                </div>
                    <br>
                    <br>
                    
                          
            </fieldset>   
        </form>
        <div class="flex space-around width-90 margin-025">
        <a class ="margin-1" href="/game"><button class="button-2">Cancel</button></a> 
        </div>
    </div>

    <%- include("../partials/footer.ejs") %>
</body>
</html>